<div id="<%=curr_user%>" class="public-wall-container">
	<div class="public-message-list-wrapper">
		<div class="overflow-wrapper">
			<div class="list-container">
			</div>
			<div class="loader-wrapper">
				<div class="loader-flex-wrapper">
					<div class="loader-container">
						<div class="spinner-border text-primary" style="width: 4rem; height: 4rem;" role="status">
							<span class="visually-hidden">Loading...</span>
						</div>
						<div class="mt-2">
							<span class="text-muted">Loading...</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="public-message-container">
		<div class="form-container">
			<textarea id="public-message-text" aria-label="Write Your Public Message Here"
				 autofocus placeholder="Write Your Public Message Here"
				class="chat-textarea" rows="1" required></textarea>
			<button id="public-message-send-btn" onclick="public_wall.handlePostMessageButtonClick()" class="ms-2 post-new-message-button">
				<i class="bi bi-send-fill"></i>
			</button>
		</div>
	</div>
</div>