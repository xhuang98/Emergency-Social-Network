<div class="supply-container">
    <div class="my-supply-header">
        <div class="my-supply-back-container" class="text-center" onclick="changeView('esn-list')">
            <i class="bi bi-chevron-left"></i>
        </div>
        <div class="my-supply-title">My Medical Supplies</div>
        <div class="d-flex flex-grow-1"></div>
    </div>

    <!-- My Medical Supplies Creation/Update Form Modal -->
    <div class="modal fade" id="my-supply-form-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="my-supply-form-modal-label" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="my-supply-form-modal-label">
                        Create A New Supply Request/Offer
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="my-supply-form">
                        <!-- input fields -->
                        <div class="my-supply-creation-name mb-3">
                            <label for="my-supply-creation-name-input" class="form-label">Supply Name</label>
                            <input type="text" minlength="1" name="supply-name" class="form-control"
                                id="my-supply-creation-name-input" placeholder="Enter the supply name" required />
                        </div>
                        <div class="my-supply-creation-quantity mb-3">
                            <label for="my-supply-creation-quantity-input" class="form-label">Supply Quantity</label>
                            <input type="number" min="1" name="supply-quantity" class="form-control"
                                id="my-supply-creation-quantity-input"
                                placeholder="Enter the supply quantity (number only)" required />
                        </div>
                        <div class="my-supply-creation-type mb-3">
                            <label class="form-label">Supply Type</label>
                            <div class="form-check">
                                <input class="form-check-input" id="my-supply-creation-type-medicine" type="radio"
                                    name="supply-type" value="Medicine" checked />
                                <label class="form-check-label" for="my-supply-creation-type-medicine">
                                    Medicine
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" id="my-supply-creation-type-accessories" type="radio"
                                    name="supply-type" value="Accessories" />
                                <label class="form-check-label" for="my-supply-creation-type-accessories">
                                    Accessories
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" id="my-supply-creation-type-equipment" type="radio"
                                    name="supply-type" value="Equipment" />
                                <label class="form-check-label" for="my-supply-creation-type-equipment">
                                    Equipment
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" id="my-supply-creation-type-food" type="radio"
                                    name="supply-type" value="Food" />
                                <label class="form-check-label" for="my-supply-creation-type-food">
                                    Food
                                </label>
                            </div>
                        </div>
                        <div class="my-supply-creation-exchange-type mb-3">
                            <label class="form-label">Exchange Type</label>
                            <div class="form-check">
                                <input class="form-check-input" id="my-supply-creation-exchange-request" type="radio"
                                    name="exchange-type" value="Request" checked />
                                <label class="form-check-label" for="my-supply-creation-exchange-request">
                                    Request A Medical Supply
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" id="my-supply-creation-exchange-offer" type="radio"
                                    name="exchange-type" value="Offer" />
                                <label class="form-check-label" for="my-supply-creation-exchange-offer">
                                    Offer A Medical Supply
                                </label>
                            </div>
                        </div>
                        <div class="d-none" id="my-supply-from-error-msg-box">
                            <span>NA</span>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success d-none" id="my-supply-creation-btn">Create</button>
                    <button type="submit" class="btn btn-success d-none" id="my-supply-update-btn">Update</button>
                </div>
            </div>
        </div>
    </div>


    <div id="my-supply-overflow-wrapper">
        <!-- Create new request/offer button -->
        <div class="d-flex flex-row-reverse" id="my-supply-open-creation-form-btn-container">
            <button type="button" class="btn btn-success btn-sm" id="my-supply-open-creation-form-btn"
                onclick="my_medical_supplies.displayMyMedicalSupplyForm(FORM_TYPE.CREATION)">
                New Request/Offer
            </button>
        </div>

        <!-- My medical supply requests and offers will be rendered here -->
        <div id="my-supply-cards-container">
        </div>

        <!-- Loading Animation -->
        <div class="loader-wrapper">
            <div class="loader-flex-wrapper">
                <div class="loader-container">
                    <div class="spinner-border text-primary" style="width: 4rem; height: 4rem;" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <div class="mt-2">
                        <span class="text-muted">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>