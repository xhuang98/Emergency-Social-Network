<div class="supply-container">

    <div class="first-aid-container-header">
        <div class="first-aid-back-container invisible" class="text-center">
            <i class="bi bi-chevron-left"></i>
        </div>
        <div class="first-aid-title">Medical Supplies</div>
        <div class="first-aid-header-padding d-flex flex-grow-1"></div>
    </div>


    <div id="supply-exchange-overflow-wrapper">
        <!-- Get medical supply/Provide medical supply switch radio group -->
        <div class="d-flex btn-group" role="group" aria-label="supply-exchange-type-radio-switch"
            id="supply-exchange-type-switch-container">
            <input type="radio" class="btn-check" name="supply-exchange-type" id="supply-exchange-get-tab"
                autocomplete="off" checked>
            <label class="btn btn-outline-primary" for="supply-exchange-get-tab">Get Medical Supply</label>

            <input type="radio" class="btn-check" name="supply-exchange-type" id="supply-exchange-provide-tab"
                autocomplete="off">
            <label class="btn btn-outline-primary" for="supply-exchange-provide-tab">Provide Medical Supply</label>
        </div>

        <div style="flex-grow: 1; min-height: 20px">
            <!-- Medical supply exchange requests and offers will be rendered here -->
            <div id="supply-exchange-cards-container">
            </div>
        </div>

        <!-- Medical Supplies Not Available Alert Modal -->
        <div class="modal fade" id="supply-exchange-na-alert-modal" data-bs-backdrop="static" data-bs-keyboard="false"
            tabindex="-1" aria-labelledby="supply-exchange-na-alert-modal-label" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="supply-exchange-na-alert-modal-label">
                            This Supply is Not Available/Outdated
                        </h5>
                        <button type="button" class="btn-close" id="supply-exchange-na-alert-close-btn"
                            data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        The page should be automatically refreshed to fetch latest medical supplies; If your browser
                        did not refresh the page automatically, please refresh manually
                    </div>
                </div>
            </div>
        </div>

        <!-- Loading Animation -->
        <div class="loader-wrapper">
            <div class="loader-flex-wrapper">
                <div class="loader-container">
                    <div class="spinner-border text-primary" style="width: 4rem; height: 4rem;" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <div class="mt-2">
                        <span class="text-muted">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>