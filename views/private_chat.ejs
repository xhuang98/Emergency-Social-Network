<div class="private-chat-container">
	<!-- Private chat header here -->
	<div class="private-chat-header shadow-lg">
		<div id="private-chat-back-container" class="text-center" onclick="changeView('chats')">
			<i class="bi bi-chevron-left"></i>
		</div>
		<div id="private-chat-receiver"></div>
		<div id="private-chat-header-padding"></div>
	</div>

	<!-- Private messaages -->
	<div class="private-message-list-wrapper">
		<div class="overflow-wrapper">
			<div class="list-container" id="private-chat-list-container">
			</div>
			<div class="loader-wrapper">
				<div class="loader-flex-wrapper">
					<div class="loader-container">
						<div class="spinner-border text-primary" style="width: 4rem; height: 4rem;" role="status">
							<span class="visually-hidden">Loading...</span>
						</div>
						<div class="mt-2">
							<span class="text-muted">Loading...</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Post a new private message -->
	<div class="private-message-container">
		<div class="form-container">
			<textarea id="private-message-text" aria-label="Write Your Private Message Here" autofocus
				placeholder="Write Your Private Message Here" class="chat-textarea" rows="1" required></textarea>
			<button id="private-message-send-btn" onclick="private_chat.handlePostMessageButtonClick()"
				class="ms-2 post-new-message-button">
				<i class="bi bi-send-fill"></i>
			</button>
		</div>
	</div>
</div>